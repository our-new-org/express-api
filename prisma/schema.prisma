// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email           String    @unique
  apartmentNumber Int
  bookings        Booking[]

  @@map("users")
}

model Room {
  roomId      Int       @id @default(autoincrement())
  roomName    String
  description String?
  capacity    Int
  image       String?
  bookings    Booking[]

  @@map("rooms")
}

model Booking {
  bookingId Int      @id @default(autoincrement())
  userId    String
  roomId    Int
  date      DateTime // The date of the booking
  startTime Int // The starting hour of the booking (e.g., 14 for 2 PM)
  duration  Int // Duration of the booking in hours (e.g., 1 for 1 hour)

  user User @relation(fields: [userId], references: [email])
  room Room @relation(fields: [roomId], references: [roomId])

  @@map("bookings")
}
