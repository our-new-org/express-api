// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email           String    @unique
  apartmentNumber Int
  bookings        Booking[]
}

model Facility {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  capacity    Int
  image       String?
  bookings    Booking[]
}

model Booking {
  bookingId  Int      @id @default(autoincrement())
  userId     String
  facilityId Int
  date       DateTime // The date of the booking
  slotTime   String
  startTime  Int // The starting hour of the booking (e.g., 14 for 2 PM)
  duration   Int // Duration of the booking in hours (e.g., 1 for 1 hour)

  user     User     @relation(fields: [userId], references: [email])
  facility Facility @relation(fields: [facilityId], references: [id])
}
